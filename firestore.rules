
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read and write their own user document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Products can be read by any authenticated user.
    match /products/{productId} {
      allow read: if request.auth != null;
      // Products can only be created or updated by users with the 'Supplier' role.
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Supplier';
    }

    // Promotions can be read by any authenticated user.
    match /promotions/{promotionId} {
        allow read: if request.auth != null;
        allow write: if false; // Promotions are read-only for now.
    }

    // Donations can be read by anyone, but only written by authenticated users.
    match /donations/{donationId} {
        allow read: true;
        allow write: if request.auth != null;
    }
  }
}
